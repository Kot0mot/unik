class Stack:
    def __init__(self):
        self.items = []

    def push(self, item):
        self.items.append(item)

    def pop(self):
        if not self.items:
            raise IndexError("pop from empty stack")
        return self.items.pop()

    def peek(self):
        if not self.items:
            raise IndexError("peek from empty stack")
        return self.items[-1]

    def is_empty(self):
        return len(self.items) == 0


# Пример использования
stack = Stack()
stack.push('a')
stack.push('b')
stack.push('c')

print("Верхушка стека:", stack.peek())  # c
print("Извлекаем:", stack.pop())        # c
print("Теперь верхушка:", stack.peek()) # b
